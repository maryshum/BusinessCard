<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mishk.businesscard.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/pictureDescription"
        android:scaleType="centerInside"
        android:src="@drawable/worker" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@color/textViewBackgroundColor"
        android:paddingBottom="3dp"
        android:text="@string/textOfTheName"
        android:textAlignment="center"
        android:textColor="@color/textColor2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:background="@color/textViewBackgroundColor"
        android:text="@string/servicesDescription"
        android:textAlignment="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:paddingBottom="5dp"
        android:textColor="@color/textColor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:background="@color/colorblockColor1"
        android:drawableLeft="@drawable/ic_schedule_white_24dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_schedule_white_24dp"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingEnd="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingStart="2dp"
        android:paddingTop="10dp"
        android:text="@string/colorBlockText1"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:background="@color/colorblockColor2"
        android:drawableLeft="@drawable/ic_email_white_24dp"
        android:drawableStart="@drawable/ic_email_white_24dp"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="2dp"
        android:paddingStart="2dp"
        android:paddingRight="2dp"
        android:paddingEnd="2dp"
        android:paddingTop="10dp"
        android:text="@string/email"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="sendConfideEmail"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:background="@color/colorblockColor3"
        android:drawableLeft="@drawable/ic_place_white_24dp"
        android:drawableStart="@drawable/ic_place_white_24dp"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="2dp"
        android:paddingStart="2dp"
        android:paddingRight="2dp"
        android:paddingEnd="2dp"
        android:paddingTop="10dp"
        android:text="@string/address"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openMap"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        android:onClick="dialConfide"
        app:srcCompat="@drawable/ic_phone_white_36dp"
        android:layout_marginBottom="16dp"/>


</RelativeLayout>
